<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PDF Scanner</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    #result {
      margin-top: 20px;
      white-space: pre-wrap;
    }
  </style>
</head>
<body>
  <h2>Upload and Scan PDF</h2>

  <form id="uploadForm">
    <label for="pdfFile">PDF file:</label>
    <input type="file" name="pdf" id="pdfFile" accept="application/pdf" required />
    <br><br>
    <button type="submit">Upload PDF</button>
  </form>

  <div id="result"></div>

  <script>
    const form = document.getElementById('uploadForm');
    const resultDiv = document.getElementById('result');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const fileInput = document.getElementById('pdfFile');
      if (!fileInput.files.length) {
        alert('Please select a PDF file.');
        return;
      }

      const formData = new FormData();
      formData.append('pdf', fileInput.files[0]);

      try {
        const response = await fetch('/api/documents/uploadAndProcessPdf', {
          method: 'PUT',
          body: formData,
          credentials: 'include'  // This ensures cookies are sent 
        });

        const data = await response.json();

        if (response.ok) {
          resultDiv.style.color = 'green';
          resultDiv.textContent = JSON.stringify(data, null, 2);
        } else {
          resultDiv.style.color = 'red';
          resultDiv.textContent = 'Error: ' + (data.message || 'Unknown error');
        }
      } catch (err) {
        console.error(err); 
        resultDiv.style.color = 'red';
        resultDiv.textContent = 'Request failed.';
      }
    });
  </script>
</body>
</html>
